{{> mainmenu _id="home" }}

<section class="ui centered stackable grid">

  <div class="ui eleven wide stacked column">
    {{> postTweet displayedTimeline='globalTimeline' }}
    <div class="ui fluid stackable cards">
      {{#each tweets}}
        {{> tweet tweet=this displayedTimeline='globalTimeline' }}
      {{/each}}
    </div>
  </div>

  <div class="ui four wide column">
    <div class="ui stackable cards">

      {{> userButtonsCard }}
      {{> deleteCard }}

      {{#with loggedInUser}}
        {{> userCard }}
      {{/with}}

    </div>
  </div>

</section>

<script src="/scripts/deleteMultipleItems.js"></script>