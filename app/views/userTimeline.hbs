{{> mainmenu _id="home" }}

<section class="ui centered stackable grid">

  <div class="ui eleven wide stacked column">
    {{> postTweet displayedTimeline='userTimeline' }}
    <div class="ui stackable two cards">
    {{#each tweets }}
      {{> tweet tweet=this displayedTimeline='userTimeline' }}
    {{/each}}
    </div>
  </div>

  <div class="ui four wide column">
    {{#with user}}
      {{> userCard }}
    {{/with}}
  </div>

</section>