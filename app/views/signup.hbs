{{> welcomemenu }}

<section class="ui basic segment">
  <div class="ui middle aligned center aligned grid">
    <aside class="ui six wide column">
      <img src="images/zwitscherIcons/zwitscher_512_512.png" class="ui medium image">
    </aside>
    <div class="ui six wide column">
        <!--<div class="ui stacked fluid form segment">-->
        <div class="ui stacked fluid segment">
            <form class="ui form" id="signupForm" action="/register" method="POST" enctype='multipart/form-data'>
                <h3 class="ui header">Register</h3>
                <div class="two fields">
                    <div class="field">
                        <label>First Name</label>
                        <input placeholder="First Name" type="text" name="firstName" value="{{user.firstName}}">
                    </div>
                    <div class="field">
                        <label>Last Name</label>
                        <input placeholder="Last Name" type="text" name="lastName" value="{{user.lastName}}">
                    </div>
                </div>
                <div class="field">
                  <label>Gender</label>
                  <select class="ui dropdown" name="gender">
                    {{#select user.gender}}
                      <option value="M">male</option>
                      <option value="W">female</option>
                    {{/select}}
                  </select>
                </div>
                <div class="field">
                    <label>Email</label>
                    <input placeholder="Email" type="text" name="email" value="{{user.email}}">
                </div>
                <div class="field">
                  <label>Password</label>
                  <div class="two fields">
                    <div class="field">
                      <input id="password" placeholder="Password" type="password" name="password">
                    </div>
                    <div class="field">
                      <input id="passwordConfirm" placeholder="Confirm Password" type="password" name="passwordConfirm">
                    </div>
                  </div>
                </div>

                <div class="ui basic centered fluid segment" id="imageSegment" style="display:none">
                  <img class="ui rounded image" id="imagePreview" src="">
                </div>

                <div class="two fields">
                  <div class="field">
                    <div class="ui icon button" id="camerabutton">
                      <i class="camera icon"></i>
                    </div>
                    <input type="file" name="profileImage" id="fileInput" accept="image/*"  style="display:none">
                  </div>
                  <div class="field">
                    <button class="ui brown submit button">Signup</button>
                  </div>
                </div>
            </form>
            {{> formerror}}
        </div>
    </div>
  </div>
</section>
<script src="/scripts/signup.js"></script>